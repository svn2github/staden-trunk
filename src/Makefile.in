$(DIRS): FORCE
	@if ! test -f $@/.dir; \
	then \
	    mkdir -p $@; \
	    cd $@; \
	    touch .dir; \
	fi

	cd $@ && $(MAKE) -f $(SRCROOT)/$@/Makefile $(FLAGS) $(MFLAGS) BUILD=$(PWD) SRC=$(SRCROOT)/$@ SUBDIR=$@ $(JOB)


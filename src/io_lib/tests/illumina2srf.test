#!/bin/sh
slx_in=$top_srcdir/tests/data/slx_in/Bustard1.9.5_28-08-2008_auto
slx_out=$top_srcdir/tests/data/slx_out

$top_builddir/progs/illumina2srf -p -R -C 0.6 \
    -N test_run:%l:%t: -n %x:%y \
    -o proc.srf $slx_in/*_seq.txt > il2srf.out 2>&1
cmp proc.srf $slx_out/proc.srf || exit 1

$top_builddir/progs/illumina2srf -P -r -C 0.6 \
    -N test_run:%l:%t: -n %x:%y \
    -o raw.srf  $slx_in/*_seq.txt > il2srf.out 2>&1
cmp raw.srf $slx_out/raw.srf || exit 1

$top_builddir/progs/illumina2srf -p -r -C 0.6 \
    -N test_run:%l:%t: -n %x:%y \
    -o both.srf $slx_in/*_seq.txt > il2srf.out 2>&1
cmp both.srf $slx_out/both.srf || exit 1

